    <div class="col">
 

            Login <input type="text" id="login" class="form-control">
            Senha <input type="password" id="senha" class="form-control">
            <a asp-controller="Nivel" asp-action="Index" class="btn btn-sm btn-success" style="background-color: #FF8C00;"> ENTRAR </a>
    
    </div>
