@model ListaNivelViewModel

<h1 style="color:#FC8A58;">@ViewData["TipoConta"]</h1>
<div class="row ">
@foreach (var item in Model.Niveis)
{
    
        <div class="col-2">
            <div class="card text-center" style="width:219px;height:248px;">

                <img src="~/img/circulo.png" style="margin:0 auto;width:50%;" class="card-img-top rounded-circle" alt="...">

                <div class="card-body">

                    <h5 class="card-title">@item.Nome</h5>
                </div>
            </div>
        </div>
    
}
</div>
